<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hoit.login.mapper.LoginMapper">
	<select id="userList" resultType="map">
		SELECT *
		FROM T_USER
		WHERE access_check = 'Y'
	</select>
	
	<select id="getUser" resultType="map" parameterType="map">
		SELECT *
		FROM T_USER
		WHERE user_id = #{user_id}
	</select>
	
	<insert id="userJoin" parameterType="map">
		INSERT INTO t_user 
		(
			user_id
		  , user_pw
		  , user_name
		  , user_atht
		  , access_check
		)
		VALUES 
		(
			#{user_id}
		  , #{user_pw}
		  , #{user_name}
		  , 10
		  , 'Y'
		)
	</insert>
</mapper>